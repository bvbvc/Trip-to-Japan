<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@post) do |f| %>

      <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :category, 'category' %>
          <%= f.collection_select :category_id, Category.all, :id, :family %>
      </div>

      <div class="form-group">
        <%= f.label :place, 'Place' %>
        <%= f.collection_select :place_id, Place.all, :id, :spot %>
      </div>
        <div class="form-group">
        <%= f.label :eye_catch, 'eye_catch' %>
        <%= f.file_field :eye_catch, class: 'form-control'%>
        </div>
        
        <div class="form-group">
        <%= f.label :content, 'Content' %>
     <%= f.cktext_area :content, class:'form-control' %>
        
      </div>
        

       

      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>