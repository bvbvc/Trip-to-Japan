
<div class= "prof_container">
  <div class="fit-img">
    <%= image_tag @user.image.thumb.to_s,class: "img-responsive img-circle" %>
  </div>
</div>
<div class="col-md-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">profile</h3></h3>
     </div>
      <div class="panel-body">
       <ul class="list-unstyled">
            <li><a><%= @user.name %></a></li>
            <li><a><%= @user.comment %></a></li>
            <li><a><%= @user.detail %></a></li>
       </ul>
  </div>
</div>


<% if @user == current_user %>
 <%= link_to 'profile edit', edit_user_path(@user), class: 'btn btn-success btn-lg' %>
<% elsif %>
 <%= render 'relationships/follow_button', user: @user %>
 <% end %>



<div class="col-xs-12">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>posts <span class="badge"><%= @count_posts %></span><% end %></li>
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>favorite<span class="badge"><%= @count_posts %></span><% end %></li>
     <!--上ここにお気に入りが入る-->
    </ul>
</div>


 <% @posts.each do |post| %>
 <p>
 <span><%= image_tag post.user.image.thumb.to_s,class: "img-circle" %></span>
 <span><%= link_to post.user.name, user_path(post.user) %></span> <span class="text-muted">posted at <%= post.created_at %></span>
 <span><%= image_tag post.eye_catch.thumb.to_s %></span>
 <span><%= link_to post.title, post_path(post.id) %></span>
 <span><%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %></span><% end %>
  
 
 </p>
      
         
     
    
</div>



 
