 <ul class="media-list">
  <% @posts.each do |post| %>
   
      <div class="media-body">
        <%= image_tag post.user.image.thumb.to_s,class: "img-responsive img-circle" %>
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <p><%= image_tag post.eye_catch.thumb.to_s,class: "img-responsive img-circle" %></p>
          <%= post.title %>
        </div>
      </div>
    </li>
    <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
  <% end %>
  
</ul>
 
 
<% else %>
  <%# フォローボタン表示 %>
<% end %>
</div>