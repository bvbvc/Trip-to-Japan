
<div class= "prof_container">
  <div class="fit-img">
    <%= image_tag @user.image.thumb.to_s,class: "img-responsive img-circle" %>
  </div>
</div>
<div class="col-md-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">profile</h3></h3>
     </div>
      <div class="panel-body">
       <ul class="list-unstyled">
            <li><a><%= @user.name %></a></li>
            <li><a><%= @user.comment %></a></li>
            <li><a><%= @user.detail %></a></li>
       </ul>
  </div>
</div>


<% if @user == current_user %>
 <%= link_to 'profile edit', edit_user_path(@user), class: 'btn btn-success btn-lg' %>
<% elsif %>
 <%= render 'relationships/follow_button', user: @user %>
 <% end %>



<div class="col-xs-12">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>posts <span class="badge"><%= @count_posts %></span><% end %></li>
      <li class="<%= 'active' if current_page?(favorites_user_path(@user)) %>"><%= link_to user_path(@user) do %>favorite<span class="badge"><%= @count_posts %></span><% end %></li>
     <!--上ここにお気に入りが入る-->
    </ul>
</div>

 <table class="table table-striped">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>eye_catch</th>
        <th>title</th>
        <th><% if @user == current_user %>delete<% end %></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.user.image.thumb.to_s,class: "img-circle" %></td>
          <td><%= link_to post.user.name, user_path(post.user) %></td>
          <td><%= image_tag post.eye_catch.thumb.to_s %><span class="text-muted"><%= post.created_at %></td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><% if @user == current_user %> <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %> <% end %></td>
          <% end %>
        </tr>
    </tbody>
  </table>